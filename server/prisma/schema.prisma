generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  full_name     String
  display_name  String
  title         String?
  profile_photo String    @default("https://ca.slack-edge.com/T2JUP6F0A-U03L7HL9WBF-g6ea89c2bc88-512")
  email         String    @unique
  phone         String?

  songs Song[]
}

model Song {
  id String @id @default(uuid())
  url String
  thumbnail String
  name String  
  singer_name String

  user User @relation(fields: [user_id], references: [id])
  user_id String 
}

