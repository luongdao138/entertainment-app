generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(uuid())
  full_name     String
  profile_photo String  @default("https://ca.slack-edge.com/T2JUP6F0A-U03L7HL9WBF-g6ea89c2bc88-512")
  email         String  @unique
  phone         String?
  password      String
  refresh_token String?
  is_verified   Boolean @default(false)
  is_premium    Boolean @default(false)

  songs           Song[] @relation("uploaded")
  favourite_songs Song[] @relation("favourite")
}

model Song {
  id          String @id @default(uuid())
  url         String
  thumbnail   String
  name        String
  singer_name String
  duration    Int

  user       User     @relation("uploaded", fields: [user_id], references: [id])
  user_id    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  liked_by User[] @relation("favourite")
}
